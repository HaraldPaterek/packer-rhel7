{
  "variables": {
    "rhn_password": "{{ env `RHN_PASSWORD` }}",
    "rhn_username": "{{ env `RHN_USERNAME` }}"
  },
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S '{{ .Path }}'",
      "inline": [
        "subscription-manager register --auto-attach --name=packer-rhel7-x86_64 --username={{ user `rhn_username` }} --password=\"{{ user `rhn_password` }}\""
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash -c '{{ .Path }}'",
      "script": "scripts/install-ansible.sh",
      "type": "shell"
    },
    {
      "extra_arguments": [
        "-e \"rhn_username={{ user `rhn_username` }} rhn_password={{ user `rhn_password` }}\"  "
      ],
      "playbook_file": "ansible/provision.yml",
      "role_paths": [
        "ansible/roles/packer-rhel"
      ],
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E '{{.Path}}'",
      "inline": [ "/sbin/reboot" ],
      "type": "shell",
      "expect_disconnect": true
    },
    {
      "pause_before": "30s",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash -c '{{ .Path }}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "120acbca7b3d55465eb9f8ef53ad7365f2997d42d4f83d7cc285bf5c71e1131f",
      "iso_checksum_type": "sha256",
      "iso_url": "iso/rhel-server-7.3-x86_64-dvd.iso",
      "output_directory": "boxes",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ]
      ],
      "vm_name": "packer-rhel7-x86_64"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{ .Provider }}-rhel7.box",
      "type": "vagrant"
    }
  ]
}
