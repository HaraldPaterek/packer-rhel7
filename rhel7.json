{
  "variables": {
    "rhn_username": "{{ env `RHN_USERNAME` }}",
    "rhn_password": "{{ env `RHN_PASSWORD` }}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S '{{ .Path }}'",
      "inline": ["subscription-manager register --auto-attach --name=packer-rhel7-x86_64 --username={{ user `rhn_username` }} --password=\"{{ user `rhn_password` }}\""]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash -c '{{ .Path }}'",
      "script": "scripts/install-ansible.sh"
    },
    {
      "type": "ansible-local",
      "extra_arguments": [ "-e \"rhn_username={{ user `rhn_username` }} rhn_password={{ user `rhn_password` }}\"  "],
      "role_paths": [ "ansible/roles/packer-rhel" ],
      "playbook_file": "ansible/provision.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S '{{ .Path }}'",
      "inline": [ "/sbin/reboot", "sleep 60"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash -c '{{ .Path }}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_url": "iso/rhel-server-7.3-x86_64-dvd.iso",
      "iso_checksum": "120acbca7b3d55465eb9f8ef53ad7365f2997d42d4f83d7cc285bf5c71e1131f",
      "iso_checksum_type": "sha256",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "output_directory": "boxes",
      "vm_name": "packer-rhel7-x86_64",
      "vboxmanage": [
        [ "modifyvm", "{{ .Name }}", "--memory", "512" ],
        [ "modifyvm", "{{ .Name }}", "--cpus", "1" ]
      ]
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{ .Provider }}-rhel7.box",
      "type": "vagrant"
    }
  ]
}
